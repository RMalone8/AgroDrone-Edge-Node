[Unit]
Description=AgroDrone telemetry sending service
After=network-online.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=5
User=sr-design
ExecStart=/usr/bin/python3 telemetry.py
WorkingDirectory=/home/sr-design/AgroDrone-Edge-Node/src
EnvironmentFile=/home/sr-design/AgroDrone-Edge-Node/.env

[Install]
WantedBy=multi-user.target